datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  recipes   Recipe[]  // <-- DODANO

   role      String    @default("user")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  ingredients String
  steps       String
  imageUrl    String?
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
